	if (sec=="x" or sec=="X"):
		print("1-) Bir Klasör Yaratın, 2-) Bir Belge Yaratun 3-) Silme İşlemi, Q-) ÇIKMAK İÇİN Q'YA BASINIZ!!")
		secenek=input("isleminiz : ")
		
		if(secenek=="1"):
