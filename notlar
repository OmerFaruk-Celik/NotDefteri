			silme_kodu="rm -rf "+"/"+path3
			os.system(silme_kodu)
			
			print("{} Nolu, {} isimli Dosya Silindi. ".format(sec3,veri_adi3))
			
			




	elif(sec=="q" or sec=="Q"):
		print("Görüşürüz...")
		break
		
	elif(sec=="g" or sec=="G"):
	
		temizle()	
		print("\033[1;34m\n[+]Bir Dizin Geri Gittiniz.  \033[1;m")
