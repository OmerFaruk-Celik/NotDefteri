sudo apt-get install git-core curl
git config --global user.name "github kullanıcı adı" 
git config --global user.mail "github mail hesabı"
ssh-keygen  //enter enter enter

gedit .ssh/id_rsa.pub //home directoryde bununla şifreni alabilirsin...

//bu keyi aldıktan sonra githubda SSH keys oluşturda oraya yapıştırıp oluşturabilirsin.

mkdir <deponun ismi>
cd <deponun ismi>
git init
touch README
git add README
git remote add origin git@github.com:<github kullanıcı adı>
<içine yükleme yapacağın depo adı>.git

git push origin master
